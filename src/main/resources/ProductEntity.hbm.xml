<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.demo.entities.ProductEntity" table="product" schema="heroku_8f21e8f014371d8">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(250)" length="250"/>
        </property>
        <property name="price">
            <column name="price" sql-type="double" precision="-1"/>
        </property>
        <property name="quantity">
            <column name="quantity" sql-type="int(11)"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(250)" length="250"/>
        </property>
        <property name="details">
            <column name="details" sql-type="text"/>
        </property>
        <property name="status">
            <column name="status" sql-type="tinyint(1)"/>
        </property>
        <property name="featured">
            <column name="featured" sql-type="tinyint(1)"/>
        </property>
        <property name="categoryId">
            <column name="category_id" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>